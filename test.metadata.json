  "1-redux-state": {
    "loose": {
      "index": [
        "renders username input",
        "renders password input",
        "updates username input",
        "updates password input",
        "posts user data",
        "renders loading state",
        "renders error state",
        "renders success state"
      ]
    },
    "tight": {
      "actions": [
        "creates CHANGE action",
        "posts user data",
        "dispatches \"loading\" STATUS action",
        "dispatches \"error\" STATUS action",
        "dispatches \"success\" STATUS action"
      ],
      "connect": [
        "maps state.status",
        "maps state.username",
        "maps state.password",
        "maps change action",
        "maps submit action"
      ],
      "reducer": [
        "sets username on CHANGE action",
        "sets password on CHANGE action",
        "sets status on STATUS action"
      ],
      "ui": [
        "renders username input",
        "renders password input",
        "responds to username change",
        "responds to password change",
        "responds to form submit",
        "renders loading state",
        "renders success state",
        "renders error state"
      ]
    }
  },
